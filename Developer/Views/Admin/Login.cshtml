@model Developer.Models.ViewModels.LoginViewModel

<div class="col-md-12 custom-center-panel">
    <h4>Zaloguj się jako administrator</h4>
    <div class="col-md-12">
        <div class="form-group-sm">
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                ;
                <div class="row">
                    <small>Login:</small><br/>
                    @Html.EditorFor(model => model.Login, new {htmlAttributes = new {@class = "form-control"}})
                </div>
                <div class="row">
                    <small>Hasło:</small><br/>
                    @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control"}})
                </div><br/>
                <div class="row">
                    <button type="submit">Zaloguj</button>
                </div>
            }

        </div>
    </div>
</div>
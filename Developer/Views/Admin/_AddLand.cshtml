@model Developer.Models.ViewModels.AdminAdvertToAdd
@using (Html.BeginForm("Add", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    Html.AntiForgeryToken();
    <div class="form-group-sm">
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        <small><b>Tytuł:</b></small>
                        @Html.EditorFor(model => model.Land.Title, new { htmlAttributes = new { @class = "form-control", @style = "max-width: none" } })
                    </div>
                    <div class="col-md-6">
                        <small><b>Cena:</b></small>
                        @Html.EditorFor(model => model.Land.Price, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <small>Miasto:</small>
                        @Html.EditorFor(model => model.Land.City, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-6">
                        <small>Lokalizacja:</small>
                        @Html.EditorFor(model => model.Land.Location, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <small>Powierzchnia:</small>
                        @Html.EditorFor(model => model.Land.Area, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-6">
                        <small>Kondygnacja:</small>
                        @Html.EditorFor(model => model.Land.Ownership, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <small>Opis:</small>
                        @Html.EditorFor(model => model.Land.Description, new { htmlAttributes = new { @class = "form-control", @style = "resize: none; max-width: none; height:200px" } })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <small>Szczegóły:</small>
                        @Html.EditorFor(model => model.Land.Details, new { htmlAttributes = new { @class = "form-control", @style = "resize: none; max-width: none; height:200px" } })
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        <small>Osoba prowadząca:</small>
                        @Html.DropDownListFor(model => model.Flat.Worker, new SelectList(Model.Workers, "Id", "FullName"), new { @class = "form-control", @id = "workers", @style = "max-width:none" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <small>Zdjęcia:</small>
                        <input type="file" multiple class="form-control" id="Flat_Files" name="Flat.Files"/>
                    </div>
                </div>
                <input type="hidden" id="AdType" name="AdType" value="Land"/>
                <div class="row">
                    <div class="col-md-12" style="text-align: center; margin-top: 10px">
                        <button type="submit" class="btn btn-xs btn-success" style="width: 150px">Zapisz</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}

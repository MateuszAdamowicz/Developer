<div class="row" style="margin-right: 15px" ng-app="searcher" ng-controller="SearcherController">
<div class="col-md-12 custom-left-panel" style="margin-left: 15px">
    <h4>Wyszukaj ofertę</h4>
    <div class="row">
        <div class="col-md-6" style="border-right: 1px solid black">
            <small>Rodzaj nieruchomości: </small>
            <select class="form-control input-sm" ng-model="myProperty" ng-options="property.name for property in properties" ng-change="loadResources(myProperty.value)">
                <option style="display: none" value="">Wybierz rodzaj</option>
            </select>
        </div>
        <div class="col-md-6" ng-show="myProperty.value =='house'">
            <small>Typ oferty :</small>
            <select class="form-control input-sm" ng-model="myoffertTypeHouse" ng-options="offert.ToLet as boolToStr(offert.ToLet) for offert in houseList|filter:{UsableArea:myhouseUsableArea||undefined}|filter:{City:myhouseCity||undefined}|filter:{Price:myhousePrice||undefined}|unique:'ToLet'">
                <option style="display: none" value="">Wybierz rodzaj</option>
            </select>
        </div>
        <div class="col-md-6" ng-show="myProperty.value =='flat'">
            <small>Typ oferty :</small>
            <select class="form-control input-sm" ng-model="myoffertTypeFlat" ng-options="offert.ToLet as boolToStr(offert.ToLet) for offert in flatList|filter:{Rooms:myflatRoom||undefined}|filter:{Price:myflatPrice||undefined}|filter:{City:myflatCity||undefined}|unique:'ToLet'">
                <option style="display: none" value="">Wybierz rodzaj</option>
            </select>
        </div>
    </div>
    @* HOUSES *@
    <div class="row" style="margin-top: 25px" ng-show="myProperty.value =='house'">
        <div class="col-md-4">
            <small>Miejscowość:</small>
            <select class="form-control input-sm" ng-model="myhouseCity" ng-options="city.City as city.City for city in houseList|filter:{ToLet:myoffertTypeHouse||undefined}|filter:{UsableArea:myhouseUsableArea||undefined}|filter:{Price:myhousePrice||undefined}|unique:'City'">
                <option value="">Wszystkie</option>
            </select>
        </div>
        <div class="col-md-4">
            <small>Powierzchnia użytkowa:</small>
            <select class="form-control input-sm" ng-model="myhouseUsableArea" ng-options="usablearea.UsableArea as usablearea.UsableArea for usablearea in houseList|filter:{ToLet:myoffertTypeHouse||undefined}|filter:{Price:myhousePrice||undefined}|filter:{City:myhouseCity||undefined}|unique:'UsableArea'">
                <option value="">Wszystkie powierzchnie</option>
            </select>
        </div>
        <div class="col-md-4">
            <small>Cena:</small>
            <select class="form-control input-sm" ng-model="myhousePrice" ng-options="price.Price as price.Price for price in houseList|filter:{ToLet:myoffertTypeHouse||undefined}|filter:{UsableArea:myhouseUsableArea||undefined}|filter:{City:myhouseCity||undefined}|unique:'Price'">
                <option value="">Każda cena</option>
            </select>
        </div>
        <div class="row">
            <div class="col-md-4">
                <select class="form-control input-sm" style="margin-top: 15px; margin-left: 15px;" ng-model="mySort" ng-options="sort.name for sort in sorting">
                    <option style="display: none" value="">Rodzaj sortowania</option>
                </select>
            </div>
            <div class="col-md-4"style="padding-left: 22px; padding-right: 22px;">
                <button class="btn btn-sm btn-default" style="margin-top: 15px; width: 100%" ng-click="clearFilters(myProperty.value)">Wyczyść filtry</button>
            </div>
        </div>
    </div>
    @* FLATS *@
    <div class="row" style="margin-top: 25px" ng-show="myProperty.value =='flat'">
        <div class="col-md-4">
            <small>Miejscowość:</small>
            <select class="form-control input-sm" ng-model="myflatCity" ng-options="city.City as city.City for city in flatList|filter:{ToLet:myoffertTypeFlat||undefined}|filter:{Rooms:myflatRoom||undefined}|filter:{Price:myflatPrice||undefined}|unique:'City'">
                <option ng-model="myflatCity" value="">Wszystkie</option>
            </select>
        </div>
        <div class="col-md-4">
            <small>Ilość pokoi:</small>
            <select class="form-control input-sm" ng-model="myflatRoom" ng-options="room.Rooms as room.Rooms for room in flatList|filter:{City:myflatCity||undefined}|filter:{ToLet:myoffertTypeFlat||endefined}|filter:{Price:myflatPrice||undefined}|unique:'Rooms'">
                <option value="">Każda ilość</option>
            </select>
        </div>
        <div class="col-md-4">
            <small>Cena:</small>
            <select class="form-control input-sm" ng-model="myflatPrice" ng-options="price.Price as price.Price for price in flatList|filter:{City:myflatCity||undefined}|filter:{ToLet:myoffertTypeFlat||undefined}|filter:{Rooms:myflatRoom||undefined}|unique:'Price'">

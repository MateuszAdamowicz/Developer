<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="row">
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-10">
                <div class="navbar navbar-default">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li><a href="#">Mieszkania</a></li>
                                <li><a href="#">Domy</a></li>
                                <li><a href="#">Działki</a></li>
                                <li><a href="#">Lokale komercyjne</a></li>
                                <li><a href="#">Obiekty komercyjne</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="margin-right:0px" hidden>
            <div class="col-md-2">

            </div>
            <div class="col-md-10" style="background-color:#2c3e50; padding-left:20px">

                <div class="col-md-8">
                    <div class="partner" style="font-style:italic; font-size: xx-large; color: white">
                        Najlepszy partner w nieruchomościach
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="partner pull-right" style="font-style: italic; font-size: medium; color: white">
                        tel. 783 888 222
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="row">
                    <div class="col-md-12 custom-left-panel">
                        <small>Wprowadź numer oferty</small><br />
                        <div class="row">
                            <div class="col-md-6" style="padding-right: 0px">
                                <input class=" form-control input-sm" />
                            </div>
                            <div class="col-md-6" style="padding-left:10px">
                                <button class="btn btn-sm btn-default">Wyszukaj</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 custom-left-panel">
                        <ul class="nav nav-pills nav-stacked small">
                            <li class="custom-list"><a href="#">Praca</a></li>
                            <li class="custom-list"><a href="#">Zespół</a></li>
                            <li class="custom-list"><a href="#">O firmie</a></li>
                            <li class="custom-list"><a href="#">Uprawnienia</a></li>
                            <li class="custom-list"><a href="#">Przyjęcie oferty</a></li>
                            <li class="custom-list"><a href="#">Zalety wyłączności</a></li>
                            <li class="custom-list"><a href="#">Kredyty</a></li>
                            <li class="custom-list"><a href="#">Pliki cookies</a></li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 custom-left-panel">
                        <button class="btn btn-sm btn-danger" style="width:100%">Dodaj bezpłatnie ofertę</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 custom-left-panel">
                        <button class="btn btn-sm btn-danger" style="width:100%">Gdzie jesteśmy</button>
                    </div>
                </div>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
        <div class="row">
            <div class="navbar navbar-default">
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>